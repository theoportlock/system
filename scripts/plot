#!/usr/bin/env python

import sys
import pandas as pd
import matplotlib.pyplot as plt


df1 = pd.read_csv(sys.argv[1])
df2 = pd.read_csv(sys.argv[2])
df3 = pd.read_csv(sys.argv[3])

fig, axs = plt.subplots(3,1, sharex=True)

axs[0].scatter(df1["Residue Number"], df1["DecayRate"],s=5)
axs[1].scatter(df2["Residue Number"], df2["DecayRate"],s=5)
axs[2].scatter(df3["Residue Number"], df3["NOE"],s=5)
axs[0].set(ylabel="R1") 
axs[1].set(ylabel="R2") 
axs[2].set(ylabel="NOE") 
plt.xticks(rotation=90)
plt.xlabel("Residue Number")
plt.savefig("foo.png")
